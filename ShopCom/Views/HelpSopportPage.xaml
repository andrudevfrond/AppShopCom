<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopCom.Views.HelpSopportPage"
             xmlns:views="clr-namespace:ShopCom.Views"
             Title="HelpSopportPage">

    <ContentPage.Resources>
        <views:HelpSopportData x:Key="data" VisitsPenddings="5"/>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <Label
            Text="{Binding
            Source={StaticResource data},
            Path=VisitsPenddings,
            Mode=OneWay}"/>

        <Button Text="Actualizar" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>